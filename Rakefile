require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "grizzly-http-webserver"

    gem.summary = %Q{A JavaGem version of grizzly-http-webserver - packaged by JavaGems (http://www.javagems.org) - original by SUN Microsystems (http://www.sun.com)}



    gem.description = %Q{grizzly-http-webserver packaged up in a JavaGem}

    gem.homepage = "http://www.javagems.org/"

    gem.authors = ["pending/unknown"]

    gem.email = "autobuild@javagems.org"
    gem.version = "1.9.10"

  

    gem.add_development_dependency "grizzly-http", "~>1.9.10"

  end
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: sudo gem install jeweler"
end

task :default => :build
